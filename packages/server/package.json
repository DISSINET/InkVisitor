{
  "name": "server",
  "version": "0.1.0",
  "scripts": {
    "build": "tsc --build tsconfig.prod.json",
    "lint": "tslint --project \"tsconfig.json\"",
    "start": "node -r module-alias/register ./dist --env=prod",
    "start:dev": "nodemon",
    "start:prod": "pm2 start npm --name \"inkvisitor-server\" -- start",
    "restart:prod": "pm2 restart inkvisitor-server",
    "stop:prod": "pm2 delete \"inkvisitor-server\"",
    "test": "nodemon --config ./spec/nodemon.json"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@daos": "dist/mocks",
    "@entities": "dist/domain",
    "@shared": "dist/shared",
    "@common": "dist/common",
    "@server": "dist/server",
    "@modules": "dist/modules",
    "@service": "dist/service"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "command-line-args": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^6.0.0",
    "find": "^0.3.0",
    "helmet": "^3.23.1",
    "http": "0.0.1-security",
    "http-status-codes": "^1.4.0",
    "https": "^1.0.0",
    "jsonfile": "^6.0.1",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.10.1",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "randomstring": "^1.1.5",
    "rethinkdb": "^2.4.2",
    "rethinkdb-ts": "^2.4.5",
    "uuid": "^8.1.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/command-line-args": "^5.0.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/find": "^0.2.1",
    "@types/helmet": "0.0.47",
    "@types/jasmine": "^3.5.10",
    "@types/jsonfile": "^6.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.13",
    "@types/randomstring": "^1.1.6",
    "@types/supertest": "^2.0.9",
    "@types/uuid": "^8.0.0",
    "jasmine": "^3.5.0",
    "nodemon": "^2.0.4",
    "pm2": "^4.5.0",
    "rsync": "^0.6.1",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.2",
    "tslint-lines-between-class-members": "^1.3.6",
    "typescript": "^3.9.5"
  }
}
