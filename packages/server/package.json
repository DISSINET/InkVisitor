{
  "name": "server",
  "version": "0.1.0",
  "scripts": {
    "build": "tsc --build tsconfig.prod.json",
    "lint": "tslint --project \"tsconfig.json\"",
    "start:production": "node -r module-alias/register ./dist/server/src --env=production",
    "start:sandbox": "node -r module-alias/register ./dist/server/src --env=sandbox",
    "start:staging": "node -r module-alias/register ./dist/server/src --env=staging",
    "start:data-import": "node -r module-alias/register ./dist/server/src --env=data-import",
    "start:development": "nodemon",
    "pm2:production": "pm2 start npm --name \"inkvisitor-server\" -- run start:production",
    "pm2:sandbox": "pm2 start npm --name \"inkvisitor-server-sandbox\" -- run start:sandbox",
    "pm2:staging": "pm2 start npm --name \"inkvisitor-server-staging\" -- run start:staging",
    "pm2:data-import": "pm2 start npm --name \"inkvisitor-server-data-import\" -- run start:data-import",
    "restart:production": "pm2 restart inkvisitor-server",
    "stop:production": "pm2 delete \"inkvisitor-server\"",
    "restart:sandbox": "pm2 restart inkvisitor-server-sandbox",
    "restart:staging": "pm2 restart inkvisitor-server-staging",
    "restart:data-import": "pm2 restart inkvisitor-server-data-import",
    "jwt": "ts-node -r tsconfig-paths/register ./src/scripts/jwt.ts",
    "test": "jest -w 1 -t"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@shared": "dist/shared",
    "@common": "dist/server/src/common",
    "@modules": "dist/server/src/modules",
    "@service": "dist/server/src/service",
    "@models": "dist/server/src/models",
    "@middlewares": "dist/server/src/middlewares"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "command-line-args": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "email-templates": "^8.0.8",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^6.0.0",
    "find": "^0.3.0",
    "helmet": "^3.23.1",
    "http": "0.0.1-security",
    "http-status-codes": "^1.4.0",
    "https": "^1.0.0",
    "jsonfile": "^6.0.1",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.10.1",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.0",
    "nodemailer-sendgrid": "^1.0.3",
    "pug": "^3.0.2",
    "randomstring": "^1.1.5",
    "rethinkdb": "^2.4.2",
    "rethinkdb-ts": "^2.4.18",
    "uuid": "^8.1.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/command-line-args": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.6",
    "@types/email-templates": "^8.0.4",
    "@types/express": "^4.17.6",
    "@types/find": "^0.2.1",
    "@types/helmet": "0.0.47",
    "@types/jasmine": "^3.5.10",
    "@types/jest": "^26.0.22",
    "@types/jsonfile": "^6.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.13",
    "@types/nodemailer": "^6.4.4",
    "@types/nodemailer-sendgrid": "^1.0.0",
    "@types/randomstring": "^1.1.6",
    "@types/supertest": "^2.0.9",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "jasmine": "^3.5.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.4",
    "pm2": "^4.5.0",
    "rsync": "^0.6.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.5.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.2",
    "tslint-lines-between-class-members": "^1.3.6",
    "typescript": "^3.9.9"
  }
}
